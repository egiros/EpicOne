@model IEnumerable<EpicOne.Models.DettagliOrdine>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center display-6 mb-5 fw-bold";>Dettagli Ordine</h2>

<div class="container">
    @foreach (var item in Model)
    {
        <div class="card mb-4 shadow-sm">
            <div class="card-body col-md-10 mx-auto">
                <h4 class="card-title text-center">Numero Ordine: <strong>@item.Biglietti.EventoID@item.BigliettoID@item.Biglietti.DataOraAcquisto.ToString("yyyyMMdd")</strong></h4>
                <table class="table table-striped table-hover my-4">
                    <tbody>
                        <tr>
                            <th>Evento</th>
                            <td>@Html.DisplayFor(modelItem => item.Biglietti.Eventi.Titolo)</td>
                        </tr>
                        <tr>
                            <th>Data e Ora Evento</th>
                            <td>@item.Biglietti.Eventi.DataOra.ToString("ddd dd/MM/yyyy ore HH:mm")</td>
                        </tr>
                        <tr>
                            <th>Luogo</th>
                            <td>@Html.DisplayFor(modelItem => item.Biglietti.Eventi.Luoghi.Nome)</td>
                        </tr>
                        <tr>
                            <th>Indirizzo Luogo</th>
                            <td>@item.Biglietti.Eventi.Luoghi.Indirizzo - @item.Biglietti.Eventi.Luoghi.Città</td>
                        </tr>
                        <tr>
                            <th>Stato</th>
                            <td>@Html.DisplayFor(modelItem => item.Biglietti.Stato)</td>
                        </tr>
                        <tr>
                            <th>Numero Ordine</th>
                            <td>@item.Biglietti.EventoID@item.BigliettoID@item.Biglietti.DataOraAcquisto.ToString("yyyyMMdd")</td>
                        </tr>
                        <tr>
                            <th>Quantità</th>
                            <td>@Html.DisplayFor(modelItem => item.Quantità)</td>
                        </tr>
                        <tr>
                            <th>Prezzo per unità</th>
                            <td>€ @Html.DisplayFor(modelItem => item.PrezzoPerUnità)</td>
                        </tr>
                        <tr>
                            <th>Indirizzo di consegna</th>
                            <td>@Html.DisplayFor(modelItem => item.Biglietti.Utenti.Indirizzo) - @item.Biglietti.Utenti.CodicePostale - @item.Biglietti.Utenti.Città</td>
                        </tr>
                        <tr>
                            <th>Note</th>
                            <td>@Html.DisplayFor(modelItem => item.Note)</td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
