@using EpicOne.Models

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - EpicOne✨</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark sticky-top navbar-transparent">
        <div class="container">
            @*@Html.ActionLink("EpicOne✨", "Index", "Home", new { area = "" }, new { @class = "navbar-brand fs-3 fw-bold" })*@
            <a href="@Url.Action("Index", "Home", new { area = "" })" class="navbar-brand fs-3 fw-bold">
                <span class="fw-lighter">Epic<strong class="fw-bold">One</strong>✨</span>
            </a>

            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Attiva/Disattiva spostamento" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-md-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1 justify-content-end align-items-sm-center">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>
                            @using (Html.BeginForm("Search", "Home", FormMethod.Get, new { id = "searchForm" }))
                            {
                                <div class="input-group">
                                    <input type="text" class="form-control rounded-0 my-0 ms-auto mw-100 d-none" placeholder="Eventi, luoghi o artisti ..." name="searchQuery">
                                    <div class="input-group-append me-auto">
                                        <button class="btn" type="submit"> <i class="bi bi-search nav-link" id="searchIcon"></i></button>
                                    </div>
                                </div>
                            }
                        </li>
                        <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link d-none d-lg-block" })</li>

                        <li>@Html.ActionLink("Eventi", "Index", "Eventi", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Categorie", "Index", "Categorie", new { area = "" }, new { @class = "nav-link d-sm-none d-lg-block" })</li>
                        <li>@Html.ActionLink("Località", "Index", "Luoghi", new { area = "" }, new { @class = "nav-link d-sm-none d-md-block" })</li>
                        <li>@Html.ActionLink("Ordini", "Index", "Ordini", new { area = "" }, new { @class = "nav-link" })</li>

                        if (User.IsInRole("Admin"))
                        {

                            <li>@Html.ActionLink("Utenti", "Index", "Utenti", new { area = "" }, new { @class = "nav-link" })</li>
                        }
                        <li>@Html.ActionLink("Logout", "Logout", "Home", new { area = "" }, new { @class = "nav-link" })</li>

                        var cart = (List<EpicOne.Models.CartItem>)Session["cart"];
                        var cartCount = cart?.Count ?? 0;
                        <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Carrello" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">
                            <div class="position-relative">
                                @Html.ActionLink(" ", "Index", "Carrello", new { area = "" }, new { @class = "bi bi-bag nav-link fs-4" })
                                @if (cartCount > 0)
                                {
                                    <span class="badge bg-danger position-absolute rounded-pill" style="top: 0px; left: 22px">@cartCount</span>
                                }
                            </div>
                        </li>
                    }
                    else
                    {
                        @*<li>@Html.ActionLink("Login", "Login", "Home", new { area = "" }, new { @class = "nav-link" })</li>*@
                        <li><a href="#" data-toggle="modal" data-target="#loginModal" class="nav-link">Login</a></li>


                    }
                    @*<li><span class="fw-bold text-white ms-sm-3">IT</span></li>*@
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle fw-bold text-white" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <img src="@Session["FlagImage"]" width="25" height="20" /> @Session["LangCode"]
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="@Url.Action("ChangeLanguage", "Home", new { lang = "it-IT", langCode = "IT", flagImage = Url.Content("~/Content/Img/it.png"), returnUrl = Request.Url.PathAndQuery })">Italiano</a>
                            <a class="dropdown-item" href="@Url.Action("ChangeLanguage", "Home", new { lang = "en-US", langCode = "EN", flagImage = Url.Content("~/Content/Img/us.png"), returnUrl = Request.Url.PathAndQuery })">English</a>
                        </div>
                    </li>
                </ul>


            </div>
        </div>
    </nav>

    @if (ViewContext.RouteData.Values["Controller"].ToString() == "Home" && ViewBag.NavbarModel != null)
    {
        @Html.Partial("_Navbar", (HomeIndexViewModel)ViewBag.NavbarModel)
    }




    @*@if (ViewContext.RouteData.Values["Controller"].ToString() == "Home")
        {
            @Html.Partial("Slider")
        }*@





    <!-- Modal Login -->

    <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header p-1">
                    <button type="button" class="close btn btn-dark ms-auto" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div id="loginModalBody">
                    <!-- Il contenuto del modale sarà caricato qui -->
                </div>
            </div>
        </div>
    </div>





    <!-- Modal Ricerca -->

    <div class="modal" tabindex="-1" id="searchResultsModal" data-aos="fade-right">
        <div class="modal-dialog modal-dialog-centered modal-lg modal-fullscreen-sm-down">
            <div class="modal-content">
                <div class="modal-header flex-column-reverse">
                    <!-- Campo di ricerca -->
                    @using (Html.BeginForm("Search", "Home", FormMethod.Get, new { id = "searchFormModal" }))
                    {
                        <div>
                            <div class="input-group my-4">
                                <input type="text" class="form-control rounded-0 my-0 ms-auto mw-100" placeholder="Eventi, luoghi o artisti ..." name="searchQuery">
                                <div class="input-group-append me-auto">
                                    <button class="btn btn-dark rounded-0" type="submit">Cerca</button>
                                </div>
                            </div>
                        </div>
                    }
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="searchResults">
                        <!-- Risultati ricerca -->
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-dark rounded-0" data-bs-dismiss="modal">Chiudi</button>
                </div>
            </div>
        </div>
    </div>






    <div class="container overflow-hidden" style="margin-top:30px">
        @RenderBody()

        <hr class="my-4" />

        <footer>

            <div class="row-cols-sm-2 row">
                <!-- Informazioni sulla Società -->
                <div class="col-6 col-md-3" data-aos="fade-right">
                    <h5>EpicOne</h5>
                    <ul class="list-unstyled">
                        <li><a class="text-decoration-none" href="#">@Html.ActionLink("Chi Siamo", "ChiSiamo", "Home", new { area = "" }, new { @class = "text-decoration-none text-secondary" })</a></li>
                        <li><a class="text-decoration-none text-secondary" href="#">Eventim International</a></li>
                        <li><a class="text-decoration-none text-secondary" href="#">Lavora con noi</a></li>
                        <li><a class="text-decoration-none text-secondary" href="#">Comunicati Stampa</a></li>
                        <li><a class="text-decoration-none text-secondary" href="#">Compliance</a></li>
                        <li><a class="text-decoration-none text-secondary" href="#">Persone con disabilità</a></li>
                    </ul>
                </div>

                <!-- Aiuto e Contatti -->
                <div class="col-6 col-md-3" data-aos="fade-right">
                    <h5>Help e contatti</h5>
                    <ul class="list-unstyled">
                        <li><a class="text-decoration-none text-secondary" href="#">Contatti Consumatori</a></li>
                        <li><a class="text-decoration-none text-secondary" href="#">Helpcenter (FAQ)</a></li>
                        <li><a class="text-decoration-none text-secondary" href="#">Cerca Punti Vendita</a></li>
                        <li><a class="text-decoration-none text-secondary" href="#">Annulli e Posticipi</a></li>
                        <li><a class="text-decoration-none text-secondary" href="#">Polizza Biglietto Sicuro</a></li>
                        <li><a class="text-decoration-none text-secondary" href="#">Modalità di pagamento</a></li>
                    </ul>
                </div>

                <!-- Servizi -->
                <div class="col-6 col-md-3"  data-aos="fade-left">
                    <h5>Servizi</h5>
                    <ul class="list-unstyled">
                        <li><a class="text-decoration-none text-secondary" href="#">Newsletter</a></li>
                        <li><a class="text-decoration-none text-secondary" href="#">Gift Voucher</a></li>
                        <li><a class="text-decoration-none text-secondary" href="#">Cambio nominativo</a></li>
                        <li><a class="text-decoration-none text-secondary" href="#">Rivendita</a></li>
                        <li><a class="text-decoration-none text-secondary" href="#">EpicOne Magazine</a></li>
                    </ul>
                </div>

                <!-- Altro -->
                <div class="col-6 col-md-3"  data-aos="fade-left">
                    <h5>Altro</h5>
                    <ul class="list-unstyled">
                        <li><a class="text-decoration-none text-secondary" href="#">Termini e condizioni d’acquisto</a></li>
                        <li><a class="text-decoration-none text-secondary" href="#">Privacy</a></li>
                        <li><a class="text-decoration-none text-secondary" href="#">Informativa Cookie</a></li>
                        <li><a class="text-decoration-none text-secondary" href="#">ADR/ODR – Conciliazione paritetica</a></li>
                        <li><a class="text-decoration-none text-secondary" href="#">Contatti Business</a></li>
                        <li><a class="text-decoration-none text-secondary" href="#">Impostazioni Cookie</a></li>
                    </ul>
                </div>
            </div>
            <hr class="my-4" />
            <!-- Footer Bottom -->
            <div class="footer-bottom row my-3">

                <div class="col-md-4 text-center text-lg-start">
                    <h5 class="mt-3 mb-2">Seguici su.. </h5>
                    <div>

                        <!-- Icona Facebook -->
                        <a  href="#" class="bi bi-facebook fs-2 text-secondary me-2"></a>

                        <!-- Icona Instagram -->
                        <a href="#" class="bi bi-instagram fs-2 text-secondary me-2"></a>

                        <!-- Icona X Twitter -->
                        <a href="#" class="bi bi-twitter fs-2 text-secondary me-2"></a>

                        <!-- Icona TikTok -->
                        <a href="#" class="bi bi-tiktok fs-2 text-secondary me-2"></a>

                        <!-- Icona YouTube -->
                        <a href="#" class="bi bi-youtube fs-2 text-secondary me-2"></a>

                        <!-- Icona LinkedIn -->
                        <a href="#" class="bi bi-linkedin fs-2 text-secondary me-2"></a>
                    </div>
                </div>
                <div class="col-md-4 text-center text-lg-start">
                    <h5 class="mt-3 mb-2">Download App</h5>
                    <div>
                        <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/51/Download_on_the_App_Store_Badge_IT_RGB_blk.svg/1200px-Download_on_the_App_Store_Badge_IT_RGB_blk.svg.png" class="img-fluid me-2" style="width: 120px; height: 35px;" />
                        <img src="https://upload.wikimedia.org/wikipedia/commons/5/5f/Google_Play_Store_badge_IT.svg" class="img-fluid" style="width: 120px; height: 35px;" />
                    </div>
                </div>
                <div class="col-md-4 text-center text-lg-start">
                    <h5 class="mt-3 mb-2">Call Center EpicOne 892.101</h5>
                    <span>Il costo massimo da rete fissa è di € 1/Min (I.V.A. esclusa senza scatto alla risposta). Per scoprire tutti i costi e i dettagli del servizio <a class="text-secondary" href="#">clicca qui</a>.<br />
                    Lunedì - Venerdì: ore 8 - 21<br />Sabato: ore 9 - 17,30<br />Domenica: chiuso</span>
                </div>
            </div>


        </footer>
    </div>
    <div class="bg-dark text-bg-dark text-center p-2 navbar-transparent">
        <p class="my-1">&copy; @DateTime.Now.Year - EpicOne - I Tuoi Eventi In Un Posto Unico - Sviluppato da E.R. <a href="https://www.linkedin.com/in/egidio-roseti/" class="bi bi-linkedin fs-4 text-bg-dark me-2"></a><a href="https://github.com/egiros" class="bi bi-github fs-4 text-bg-dark me-2"></a> - Tutti i diritti riservati</p>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <script>
        $('#loginModal').on('show.bs.modal', function (event) {
            $.get('/Home/Login', function (data) {
                $('#loginModalBody').html(data);
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            $("#login-title").hide();

        });
    </script>


    <script>
        $('#searchForm, #searchFormModal').on('submit', function (e) {
            e.preventDefault();

            $.ajax({
                url: '/Home/Search',
                type: 'GET',
                data: $(this).serialize(),
                success: function (data) {
                    $('#searchResults').html(data);
                    $('#searchResultsModal').modal('show');
                }
            });
        });

    </script>

    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>

</body>
</html>
