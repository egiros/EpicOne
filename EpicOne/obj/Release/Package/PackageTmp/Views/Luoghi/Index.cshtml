@model IEnumerable<EpicOne.Models.Luoghi>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center display-6 mb-5 fw-bold">Luoghi</h2>

<div class="container">
    @if (User.IsInRole("Admin"))
    {
        <p>
            @Html.ActionLink("Aggiungi Nuovo Luogo", "Create", "", new { @class = "btn btn-success" })
        </p>
    }
    @foreach (var item in Model)
    {
        <div class="card mb-4 shadow-sm" data-aos="fade-right">
            <div class="card-body col-md-10 mx-auto">
                <h4 class="card-title text-center fw-bold">@Html.DisplayFor(modelItem => item.Nome)</h4>
                <table class="table table-striped table-hover my-4">
                    <tbody>
                        <tr>
                            <th>Città</th>
                            <td>@Html.DisplayFor(modelItem => item.Città)</td>
                        </tr>
                        <tr>
                            <th>Indirizzo</th>
                            <td>@Html.DisplayFor(modelItem => item.Indirizzo)</td>
                        </tr>
                        <tr>
                            <th>Capienza</th>
                            <td>@Html.DisplayFor(modelItem => item.Capacità)</td>
                        </tr>
                    </tbody>
                </table>
                <div class="d-flex justify-content-between align-items-center">
                    @Html.ActionLink("Visualizza", "Index", "Eventi", new { luogoId = item.LuogoID }, new { @class = "btn btn-outline-warning" })
                    @if (User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Modifica", "Edit", new { id = item.LuogoID }, new { @class = "btn btn-outline-warning " })
                        @Html.ActionLink("Elimina", "Delete", new { id = item.LuogoID }, new { @class = "btn btn-danger d-none d-md-block" })
                        @Html.ActionLink("X", "Delete", new { id = item.LuogoID }, new { @class = "btn btn-danger d-md-none" })
                    }
                </div>
            </div>
        </div>
    }
</div>