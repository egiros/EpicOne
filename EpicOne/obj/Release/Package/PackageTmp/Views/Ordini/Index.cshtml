@model IEnumerable<EpicOne.Models.Ordini>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center display-6 mb-5 fw-bold">Ordini </h2>

<div class="container">
    @foreach (var item in Model)
    {
        <div class="card mb-5 shadow-sm"  data-aos="fade-right">
            <div class="text-center">
                @if (item.isEvaso)
                {
                    <h4 class="bg-success fs-4 rounded-top p-3">Ordine evaso</h4>
                }
                else
                {
                    <h4 class="bg-warning fs-4 rounded-top p-3">Ordine in preparazione</h4>
                }
            </div>
            <div class="card-body col-md-10 mx-auto">
                @*<h4 class="card-title text-center fw-bold">@item.Utenti.Nome @item.Utenti.Cognome</h4>*@
                <table class="table table-striped table-hover my-4">
                    <tbody>
                        <tr>
                            <th>Utente</th>
                            <td class="text-uppercase">@item.Utenti.Nome @item.Utenti.Cognome</td>
                        <tr>
                            <th>Data Ordine</th>
                            <td>@Html.DisplayFor(modelItem => item.DataOraOrdine)</td>
                        </tr>
                        <tr>
                            <th>Totale</th>
                            <td>€ @Html.DisplayFor(modelItem => item.Totale)</td>
                        </tr>
                    </tbody>
                </table>

                <div class="col-md-10 mx-auto">
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="d-flex flex-column flex-md-row">
                            <div class="mx-auto ms-md-auto">
                                @Html.ActionLink("Dettagli", "Index", "DettagliOrdine", new { ordineID = item.OrdineID }, new { @class = "btn btn-dark my-2 me-3" })
                                @Html.ActionLink("Biglietti", "Index", "Biglietti", new { id = item.OrdineID }, new { @class = "btn btn-dark my-2" })
                            </div>
                            <div class="mx-auto me-md-auto">
                                @Html.ActionLink("Modifica", "Edit", new { id = item.OrdineID }, new { @class = "btn btn-warning btn-sm my-2" })
                                @Html.ActionLink(item.isEvaso ? "Non evaso" : "Contrassegna come evaso", "ToggleEvaso", new { id = item.OrdineID }, new { @class = "btn btn-success btn-sm my-2 d-none d-md-inline" })
                                @Html.ActionLink(item.isEvaso ? "Non evaso" : "Evaso", "ToggleEvaso", new { id = item.OrdineID }, new { @class = "btn btn-success btn-sm my-2 d-md-none" })
                                @Html.ActionLink("Elimina", "Delete", new { id = item.OrdineID }, new { @class = "btn btn-danger btn-sm my-2 d-none d-md-inline" })
                                @Html.ActionLink("X", "Delete", new { id = item.OrdineID }, new { @class = "btn btn-danger btn-sm my-2 d-md-none" })
                            </div>

                        </div>
                    }
                    else
                    {
                        <div class="d-flex justify-content-center">
                            @Html.ActionLink("Dettagli", "Index", "DettagliOrdine", new { ordineID = item.OrdineID }, new { @class = "btn btn-dark btn-sm my-2 ms-2 me-3" }) 
                            @Html.ActionLink("Biglietti", "Index", "Biglietti", new { id = item.OrdineID }, new { @class = "btn btn-dark btn-sm my-2 ms-3 me-2" })
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>
