@model IEnumerable<EpicOne.Models.Ordini>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center display-4 mb-5 fw-bold" style="margin-top:100px" ;>Ordini </h2>

<table class="table table-striped table-responsive table-hover">
    <tr>
        <th>
            Utente
        </th>
        <th>
            Data Ordine
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Totale)
        </th>
        <th>
            Stato
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="align-middle">
            <td class="text-uppercase">
                @item.Utenti.Nome @item.Utenti.Cognome
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataOraOrdine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Totale)
            </td>

            <td>
                @if (item.isEvaso)
                {
                    <p class="bg-success text-light p-1 m-0">Ordine evaso</p>
                }
                else
                {
                    <p class="bg-warning p-1 m-0">Ordine in preparazione</p>
                }
            </td>
            @if (User.IsInRole("Admin"))
            {
                <td>
                    @Html.ActionLink("Modifica", "Edit", new { id = item.OrdineID }, new { @class = "btn btn-warning btn-sm my-2" }) |
                    @Html.ActionLink("Dettagli", "Index", "DettagliOrdine", new { ordineID = item.OrdineID }, new { @class = "btn btn-primary btn-sm my-2" }) |
                    @Html.ActionLink("Biglietti", "Index", "Biglietti", new { id = item.OrdineID }, new { @class = "btn btn-primary btn-sm my-2" }) |
                    @Html.ActionLink(item.isEvaso ? "Non evaso" : "Contrassegna come evaso", "ToggleEvaso", new { id = item.OrdineID }, new { @class = "btn btn-success btn-sm my-2" }) |
                    @Html.ActionLink("Elimina", "Delete", new { id = item.OrdineID }, new { @class = "btn btn-danger btn-sm my-2" })
                </td>
            }
            else
            {
                <td>
                    @Html.ActionLink("Dettagli", "Index", "DettagliOrdine", new { ordineID = item.OrdineID }, new { @class = "btn btn-dark btn-sm my-2" }) |
                    @Html.ActionLink("Biglietti", "Index", "Biglietti", new { id = item.OrdineID }, new { @class = "btn btn-dark btn-sm my-2" }) |
                </td>
            }
        </tr>
    }

</table>
