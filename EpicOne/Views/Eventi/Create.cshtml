@model EpicOne.Models.Eventi

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm("Create", "Eventi", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()



    <div class="container-fluid my-5">
        <div class="card shadow pb-5">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center">
                    <div class="form-horizontal mx-3">
                        <h2 class="mb-5 fw-bold" style="margin-top:100px" ;>Crea Nuovo Evento</h2>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group mb-2">
                            @Html.LabelFor(model => model.Titolo, htmlAttributes: new { @class = "control-label col" })
                            <div class="col">
                                @Html.EditorFor(model => model.Titolo, new { htmlAttributes = new { @class = "form-control mx-auto" } })
                                @Html.ValidationMessageFor(model => model.Titolo, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group mb-2">
                            @Html.LabelFor(model => model.Descrizione, htmlAttributes: new { @class = "control-label col" })
                            <div class="col">
                                @Html.EditorFor(model => model.Descrizione, new { htmlAttributes = new { @class = "form-control mx-auto" } })
                                @*@Html.TextAreaFor(model => model.Descrizione, new { htmlAttributes = new { @class = "form-control mx-auto" } })*@
                                @Html.ValidationMessageFor(model => model.Descrizione, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group mb-2">
                            Data e Ora
                            <div class="col">
                                @Html.EditorFor(model => model.DataOra, new { htmlAttributes = new { @class = "form-control mx-auto", @type = "datetime-local" } })
                                @Html.ValidationMessageFor(model => model.DataOra, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group mb-2">
                            Luogo
                            <div class="col">
                                @Html.DropDownList("LuogoID", null, htmlAttributes: new { @class = "form-control mx-auto" })
                                @Html.ValidationMessageFor(model => model.LuogoID, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group mb-2">
                            Categoria
                            <div class="col">
                                @Html.DropDownList("CategoriaID", null, htmlAttributes: new { @class = "form-control mx-auto" })
                                @Html.ValidationMessageFor(model => model.CategoriaID, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group mb-2">
                            Organizzatore
                            <div class="col">
                                @Html.DropDownList("OrganizzatoreID", null, htmlAttributes: new { @class = "form-control mx-auto" })
                                @Html.ValidationMessageFor(model => model.OrganizzatoreID, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group mb-2">
                            Prezzo Base
                            <div class="col">
                                @Html.EditorFor(model => model.PrezzoBase, new { htmlAttributes = new { @class = "form-control mx-auto" } })
                                @Html.ValidationMessageFor(model => model.PrezzoBase, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group mb-2">
                            Biglietti Totali
                            <div class="col">
                                @Html.EditorFor(model => model.QuantitàTotaleBiglietti, new { htmlAttributes = new { @class = "form-control mx-auto" } })
                                @Html.ValidationMessageFor(model => model.QuantitàTotaleBiglietti, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group mb-2">
                            Biglietti Restanti
                            <div class="col">
                                @Html.EditorFor(model => model.BigliettiRimanenti, new { htmlAttributes = new { @class = "form-control mx-auto" } })
                                @Html.ValidationMessageFor(model => model.BigliettiRimanenti, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="form-group mb-3">
                            <h6 class="fw-bold">Seleziona un immagine</h6>
                            <input type="file" name="File" class="form-control mx-auto" />
                        </div>



                        @*<div class="form-group">
                @Html.LabelFor(model => model.Immagine, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="file" name="file" />
                    @Html.ValidationMessageFor(model => model.Immagine, "", new { @class = "text-danger" })
                </div>
            </div>*@

                        @*<div class="form-group">
                @Html.LabelFor(model => model.Immagine, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Immagine, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Immagine, "", new { @class = "text-danger" })
                </div>
            </div>*@

                        <div class="form-group">
                            <div class="col mx-auto">
                                <input type="submit" value="Crea" class="btn btn-outline-warning my-3" />
                                @Html.ActionLink("Indietro", "Index", "", new { @class = "btn btn-warning ms-3" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
